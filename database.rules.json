{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    // You can add other rules here for different parts of your database.
    // For now, we'll keep it simple.
    ".read": "auth != null",
    ".write": "auth != null"
  }
}
